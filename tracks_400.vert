#version 400

uniform mat4 uPMatrix;
uniform mat4 uMVMatrix;
//uniform mat4 uNMatrix;

uniform float uTrackAlpha;

in vec3 aPos;
in float aTrackFlag;
in vec3 aColor;

flat out float drawFlag;
out vec4 vColour;

void main(void)
{
    drawFlag = aTrackFlag;

	gl_Position = vec4(aPos, 1.0);
    vColour = vec4(aColor/255.0, uTrackAlpha);
}


